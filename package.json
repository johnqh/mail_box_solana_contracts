{
  "name": "@johnqh/mail_box_solana_contracts",
  "version": "1.0.0",
  "description": "TypeScript client library for MailBox Solana - Decentralized messaging system with USDC fees and revenue sharing",
  "main": "dist/app/index.js",
  "types": "dist/app/index.d.ts",
  "files": [
    "dist/app/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:contracts": "anchor build",
    "test": "npm run build && npx mocha dist/tests/types-utils.test.js --reporter spec",
    "test:contracts": "anchor test --skip-local-validator",
    "test:contracts:local": "anchor test",
    "test:all": "npm run build && npx mocha dist/tests/types-utils.test.js --reporter spec",
    "lint": "eslint . --ext .ts,.js",
    "prettier": "prettier --write .",
    "prepare": "npm run build"
  },
  "keywords": [
    "solana",
    "web3",
    "mailbox",
    "messaging",
    "usdc",
    "typescript",
    "client",
    "sdk",
    "blockchain",
    "decentralized"
  ],
  "author": "MailBox Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnqh/mail_box_solana_contracts"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.95.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "chai": "^4.3.0",
    "eslint": "^9.34.0",
    "mocha": "^10.0.0",
    "prettier": "^3.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@coral-xyz/borsh": "^0.30.1",
    "@solana/web3.js": "^1.95.0"
  },
  "files": [
    "dist/",
    "target/idl/",
    "target/types/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "overrides": {
    "bigint-buffer": "1.1.5"
  },
  "resolutions": {
    "bigint-buffer": "1.1.5"
  }
}
