{
  "name": "mail_box_solana_contracts",
  "version": "1.0.0",
  "description": "MailBox Solana - Decentralized messaging system with USDC fees and revenue sharing",
  "main": "dist/app/index.js",
  "types": "dist/app/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "anchor test --skip-local-validator",
    "test:local": "anchor test",
    "build-programs": "anchor build",
    "deploy": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "anchor deploy --provider.cluster mainnet",
    "start-validator": "solana-test-validator",
    "clean": "anchor clean",
    "lint": "eslint . --ext .ts,.js",
    "prettier": "prettier --write .",
    
    "deploy:local": "ts-node scripts/deploy.ts localnet",
    "deploy:devnet-coordinated": "ts-node scripts/deploy.ts devnet",
    "deploy:testnet": "ts-node scripts/deploy.ts testnet",
    "deploy:mainnet-coordinated": "ts-node scripts/deploy.ts mainnet-beta",
    
    "deploy:coordinated": "ts-node scripts/deploy-coordinated.ts",
    "deploy:all-testnets": "ts-node scripts/deploy-coordinated.ts",
    
    "predict-addresses": "ts-node scripts/predict-addresses.ts",
    "verify-deployments": "ts-node scripts/verify-deployments.ts"
  },
  "keywords": [
    "solana",
    "anchor",
    "smart-contract",
    "mailbox",
    "web3",
    "messaging",
    "usdc",
    "revenue-sharing",
    "spl-token",
    "typescript"
  ],
  "author": "MailBox Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnqh/mail_box_solana_contracts"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/web3.js": "^1.95.0",
    "@solana/spl-token": "^0.4.6",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0",
    "ts-mocha": "^10.0.0",
    "chai": "^4.3.0",
    "@types/chai": "^4.3.0",
    "mocha": "^10.0.0"
  },
  "dependencies": {
    "@coral-xyz/borsh": "^0.30.1",
    "@solana/web3.js": "^1.95.0",
    "@solana/spl-token": "^0.4.6"
  },
  "files": [
    "dist/",
    "target/idl/",
    "target/types/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}